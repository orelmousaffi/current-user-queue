extends layout

block css
  link(rel='stylesheet', href='/css/chat.css')

block content
  div(ng-controller='mainCtrl')
    ul#messages
      li(ng-repeat="msg in messages track by $index") {{ msg }}
    form
      input#m(autocomplete='off', placeholder="Type your message here..." ng-model="message")
      button(ng-click="sendMsg()") Send

block js
  script(type='text/javascript', src='/angular/chatCtrl.js')
